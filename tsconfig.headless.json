{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "importsNotUsedAsValues": "remove",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
  },
  "buildOptions": {
    "verbose": true
  },
  "files": [
    "src/HeadlessServer.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/types/globalTypesMain.d.ts"
  ]
}